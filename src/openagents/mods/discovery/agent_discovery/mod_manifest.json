{
    "mod_name": "agent_discovery",
    "version": "2.0.0",
    "description": "Agent discovery mod for OpenAgents that allows agents to announce their capabilities, search for other agents by capability, and receive connection notifications",
    "authors": ["OpenAgents Team"],
    "license": "MIT",
    "agent_adapter_class": "AgentDiscoveryAdapter",
    "network_mod_class": "AgentDiscoveryMod",
    "capabilities": [
        "capability_management",
        "agent_discovery",
        "capability_matching",
        "agent_listing",
        "connection_notifications"
    ],
    "requires_adapter": true,
    "studio_interface": false,
    "dependencies": [],
    "metadata": {
        "supported_capability_types": [
            "service",
            "skill",
            "knowledge",
            "resource",
            "tool"
        ]
    },
    "process_events": [
        "discovery.capabilities.set",
        "discovery.capabilities.get",
        "discovery.agents.search",
        "discovery.agents.list"
    ],
    "generate_events": [
        "discovery.notification.agent_connected",
        "discovery.notification.agent_disconnected",
        "discovery.notification.capabilities_updated"
    ]
} 